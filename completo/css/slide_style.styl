.blue-slide
  	background #4390ee
.green-slide
  	background #49a430
.orange-slide
  	background #ff8604
.pagination
  	position absolute
  	z-index 20
  	left 10px
  	bottom 10px
    display none
.pink-slide
 	background #973e76
.red-slide
  	background #ca4040
.swiper-container
  	color #fff
  	height 20
  	text-align center
  	width 100%
.swiper-pagination-switch
  	background #222
  	border-radius 8px
